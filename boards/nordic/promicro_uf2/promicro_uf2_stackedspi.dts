/dts-v1/;
#include "promicro_uf2.dts"

&pinctrl {
	spi3_default: spi3_default {
		/delete-node/ group1;
		group1 {
			psels = <NRF_PSEL(SPIM_MISO, 0, 11)>,
					<NRF_PSEL(SPIM_MOSI, 0, 24)>,
					<NRF_PSEL(SPIM_SCK, 0, 22)>;
		};
	};

	spi3_sleep: spi3_sleep {
		/delete-node/ group1;
		group1 {
			psels = <NRF_PSEL(SPIM_MISO, 0, 11)>,
					<NRF_PSEL(SPIM_MOSI, 0, 24)>,
					<NRF_PSEL(SPIM_SCK, 0, 22)>;
			low-power-enable;
		};
	};
};

/ {
	buttons {
		button0: button_0 {
			gpios = <&gpio0 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
		};
	};

	aliases {
		sw0 = &button0;
	};

	zephyr,user {
		int0-gpios = <&gpio0 2 0>;
		clk-gpios = <&gpio1 11 GPIO_OPEN_DRAIN>;
		vcc-gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;
		gnd-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;
	};
};

/delete-node/ &i2c0;

&spi3 {
	cs-gpios = <&gpio1 0 GPIO_ACTIVE_LOW>;
};
